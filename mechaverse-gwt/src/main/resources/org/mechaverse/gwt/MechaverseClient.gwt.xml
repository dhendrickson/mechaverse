<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='MechaverseClient'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User' />

  <inherits name='com.google.gwt.junit.JUnit' />

  <inherits name='com.google.gwt.user.theme.standard.Standard' />

  <!-- Other module inherits                                      -->
  <inherits name="com.google.common.collect.Collect"/>
  <inherits name="org.mechaverse.simulation.api"/>
  <inherits name="org.mechaverse.simulation.ant.api"/>
  <inherits name="org.mechaverse.simulation.ant.core"/>
  
  <!-- Specify the app entry point class.                         -->
  <entry-point class='org.mechaverse.gwt.client.MechaverseClient' />

  <!-- Specify the paths for translatable code                    -->
  <source path='client' />
  <source path='shared' />

  <add-linker name="xsiframe"/>
  <set-configuration-property name="devModeRedirectEnabled" value="true"/>
</module>
